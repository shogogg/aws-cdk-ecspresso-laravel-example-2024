{
  "launchType": "FARGATE",
  "platformFamily": "LINUX",
  "platformVersion": "1.4.0",
  "serviceName": "{{ must_env `APP_ECS_SERVICE_NAME` }}",
  "desiredCount": 2,
  "networkConfiguration": {
    "awsvpcConfiguration": {
      "subnets": [
        "{{ cfn_output `ExampleLaravelAppStack` `PrivateSubnetAz1` }}",
        "{{ cfn_output `ExampleLaravelAppStack` `PrivateSubnetAz2` }}"
      ],
      "securityGroups": ["{{ cfn_output `ExampleLaravelAppStack` `EcsSecurityGroupId` }}"],
      "assignPublicIp": "DISABLED"
    }
  },
  "loadBalancers": [
    {
      "containerName": "nginx",
      "containerPort": 8080,
      "targetGroupArn": "{{ cfn_output `ExampleLaravelAppStack` `AlbTargetGroupArn` }}"
    }
  ],
  "enableExecuteCommand": false
}
